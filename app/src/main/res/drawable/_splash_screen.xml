<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid
                android:color="@color/background_normal"/>
        </shape>
    </item>
    <item
        android:bottom="-20dp"
        android:left="-50dp"
        android:right="100dp"
        android:top="-130dp">
        <shape
            android:shape="oval">
            <size
                android:width="500dp"
                android:height="500dp"/>
            <solid
                android:color="@color/background_normal_light"/>
            <padding
                android:paddingLeft="400dp"/>
        </shape>
    </item>
    <item
        android:width="375dp"
        android:height="192dp"
        android:drawable="@drawable/_logo"
        android:gravity="center"/>
</layer-list>