<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/_sfondo_grigio"
                tools:context="it.playfellas.superapp.ui.master.MasterActivity">

    <Button
        android:id="@+id/game1_button"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="7dp"
        android:layout_marginStart="14dp"
        android:background="@drawable/_game_img_btn_full"/>

    <Button
        android:id="@+id/game3_button"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/game2_button"
        android:layout_marginEnd="14dp"
        android:layout_marginStart="7dp"
        android:background="@drawable/_game_img_btn_full"/>

    <Button
        android:id="@+id/game2_button"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignTop="@+id/game1_button"
        android:layout_centerHorizontal="true"
        android:background="@drawable/_game_img_btn_full"/>

    <Button
        android:id="@+id/resetSettingsButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/_bt_master_info_button"
        android:text="Reset"/>
</RelativeLayout>
