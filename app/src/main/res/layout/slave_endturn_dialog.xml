<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="900dp"
    android:layout_height="500dp"
    android:layout_alignParentStart="true"
    android:background="@drawable/_sfondo_grigio">

    <RelativeLayout
        android:id="@+id/relativeLayoutDialogSlots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/dialogSlot1ImageView"
            android:layout_width="300dp"
            android:layout_height="300dp"/>

        <ImageView
            android:id="@+id/dialogSlot2ImageView"
            android:layout_width="300dp"
            android:layout_height="300dp"/>

        <ImageView
            android:id="@+id/dialogSlot3ImageView"
            android:layout_width="300dp"
            android:layout_height="300dp"/>

        <ImageView
            android:id="@+id/dialogSlot4ImageView"
            android:layout_width="300dp"
            android:layout_height="300dp"/>
    </RelativeLayout>

</RelativeLayout>